<%- include("partials/header"); %>

</head>
<body class="overlay">

   <!--  Sign Up Form -->
   <div class="mt-5 justify-content-center">
      <form class="register" action="/register" method="POST">
         <div class="con">
            <header class="head-form">
               <h2>Sign Up</h2>
               <p>Register here using your username and password</p>
            </header>
            <br>
            <div class="field-set">
               <!--   user name -->
               <span class="input-item">
                  <i class="fa fa-user-circle"></i>
               </span>
               <!--   user name Input-->
               <input class="form-input" id="txt-input" type="email" name="email" placeholder="Email" required autocomplete="off">
               <br>
               <span class="input-item">
                  <i class="fa fa-key"></i>
               </span>
               <!--   Password Input-->
               <input class="form-input" type="password" placeholder="Password" id="pwd" name="password" required>
               <span>
                  <i class="fa fa-eye" aria-hidden="true" type="button" id="eye"></i>
               </span>
               <br>
               <!--   button SignIn -->
               <button type="submit" class="buton but-hover"> Sign Up </button>
            </div>

            <div class="justify-content-center">
               <button class="btn buton but-hover submits clear mt-4">Clear All</button>
               <a href="/login">
                  <span class="btn buton submits sign-up mt-4 but-hover"> Log in
                     <i class="fa fa-user-plus" aria-hidden="true"></i>
                  </span>
               </a>
            </div>
         </div>
      </form>
   </div>

<%- include("partials/footer"); -%>