<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="POST">
   <div class="form-group">
      <label>Title</label>
      <input type="text" name="artTitle" class="form-control" autocomplete="off">
   </div>
   <div class="form-group">
      <label>Article</label>
      <textarea name="artBody" class="form-control" cols="30" rows="5"></textarea>
   </div>   
   <button type="submit" class="btn btn-dark">Publish</button>
</form>
<%- include("partials/footer"); -%>
